<!--ユーザの詳細-->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= link_to "プロフィール編集", edit_user_path %>
</div>

<!--新規投稿フォーム-->
<%= render 'books/form', book: @book %>
<!--ユーザの投稿一覧-->
<% @books.each do |book| %>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tr>
    <td><%= image_tag book.user.get_profile_image(50,50) %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>
  </tr>
</table>
<% end %>